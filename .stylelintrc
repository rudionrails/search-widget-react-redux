{
  "extends": [
    "stylelint-config-standard",
  ],

  "plugins": [
    "stylelint-selector-bem-pattern",
    "stylelint-order"
  ],

  "rules": {
    "plugin/selector-bem-pattern": {
      "preset": "suit"
    },

    "order/order": [
			"custom-properties",
			"declarations"
		],
    "order/properties-alphabetical-order": true
  }
}
